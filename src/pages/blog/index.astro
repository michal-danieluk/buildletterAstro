--- 
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Blog" description="Wszystkie wpisy na blogu.">
    <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">Blog</h1>

    <div class="space-y-8">
        {posts.length === 0 ? (
            <p class="text-center text-gray-500 dark:text-gray-400">Nie ma jeszcze żadnych wpisów. Wróć wkrótce!</p>
        ) : (
            posts.map(post => (
                <a href={`/blog/${post.slug}/`} class="block bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-all">
                    <h2 class="text-2xl font-bold text-amber-500 dark:text-amber-400 mb-2">{post.data.title}</h2>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">{post.data.description}</p>
                    <time class="text-sm text-gray-500 dark:text-gray-400">{post.data.date.toLocaleDateString('pl-PL')}</time>
                </a>
            ))
        )}
    </div>
</BaseLayout>