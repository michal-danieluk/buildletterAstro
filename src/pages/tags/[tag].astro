--- 
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
    const allPosts = await getCollection('blog');
    const uniqueTags = [...new Set(allPosts.map(post => post.data.tags).flat())];

    return uniqueTags.map(tag => {
        const filteredPosts = allPosts.filter(post => post.data.tags.includes(tag));
        return {
            params: { tag },
            props: { posts: filteredPosts },
        };
    });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title={`Artykuły z tagiem: ${tag}`} description={`Lista artykułów oznaczonych tagiem ${tag}`}>
    <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">Tag: <span class="text-amber-500">{tag}</span></h1>

    <div class="space-y-8">
        {posts.map(post => (
            <a href={`/blog/${post.slug}/`} class="block bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-all">
                <h2 class="text-2xl font-bold text-amber-500 dark:text-amber-400 mb-2">{post.data.title}</h2>
                <p class="text-gray-600 dark:text-gray-300 mb-4">{post.data.description}</p>
                <time class="text-sm text-gray-500 dark:text-gray-400">{post.data.date.toLocaleDateString('pl-PL')}</time>
            </a>
        ))}
    </div>
</BaseLayout>